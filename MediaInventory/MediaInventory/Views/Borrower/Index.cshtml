@model List<Borrower>
@{
    ViewBag.Title = "Borrower Manager";
}
<h1>Borrower Manager</h1>

@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Borrower ID</th>
                <th>Name</th>
                <th>Phone Number</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var borrower in Model)
            {
                <tr>
                    <td>@borrower.BorrowerId</td>
                    <td>@borrower.BorrowerName</td>
                    <td>@borrower.BorrowerPhone</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div>No data found.</div>
}
